generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  relationMode = "prisma"
}

model Prompt {
  id           String   @id @default(uuid())
  title        String
  desc         String
  category     String
  imageUrl     String?
  fullPrompt   String
  tags         String   // Stored as comma-separated or JSON string
  previewImage String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model NewsletterSubscriber {
  id        String   @id @default(uuid())
  email     String   @unique
  createdAt DateTime @default(now())
}

model ContactMessage {
  id        String   @id @default(uuid())
  name      String
  email     String
  message   String
  createdAt DateTime @default(now())
}

// User model for Authentication
model User {
  id              String           @id @default(uuid())
  name            String?
  email           String           @unique
  password        String
  image           String?
  role            String           @default("USER") // USER, ADMIN
  createdAt       DateTime         @default(now())
  submissions     Submission[]
  posts           BlogPost[]
  serviceRequests ServiceRequest[]
}

model Submission {
  id          String   @id @default(uuid())
  name        String
  handle      String?
  email       String
  tool        String
  promptText  String
  link        String?
  assetPath   String?
  consent     Boolean
  status      String   @default("pending") // pending, approved, rejected
  moderatedBy String?
  moderatedAt DateTime?
  createdAt   DateTime @default(now())
  
  userId      String?
  user        User?    @relation(fields: [userId], references: [id])
  
  @@index([userId])
}

model BlogPost {
  id          String   @id @default(uuid())
  title       String
  slug        String   @unique
  content     String   // Markdown content
  excerpt     String?
  coverImage  String?
  published   Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  authorId    String
  author      User     @relation(fields: [authorId], references: [id])
  
  @@index([authorId])
}

model ServiceRequest {
  id              String   @id @default(uuid())
  userId          String
  user            User     @relation(fields: [userId], references: [id])
  
  serviceType     String   // "video_editing", "photo_editing", "website_frontend", "website_fullstack"
  
  // Service-specific details
  websiteName     String?
  uiUxDetails     String?  // Text description
  businessDetails String?  // Detailed business information
  colorPalette    String?  // Optional color preferences
  editDetails     String?  // For video/photo editing requirements
  
  // Contact Information
  contactEmail    String
  contactPhone    String?
  
  // Payment & Status
  paymentStatus   String   @default("pending") // pending, paid, failed
  transactionId   String?
  amount          Float?
  
  status          String   @default("pending") // pending, in_progress, completed, cancelled
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  @@index([userId])
}
