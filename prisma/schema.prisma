generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  // relationMode = "prisma" // Removed to allow foreign keys if supported or keep it and ensure indexes. 
  // Actually, Vercel Postgres usually works fine with relationMode = "prisma", but let's stick to default if possible or keep as is.
  // The user didn't ask to change this, so I will keep relationMode = "prisma" if it was there, but the snippet above suggests I should just leave it alone.
  // Wait, I am not editing this part in my tool call, so it's fine.
  relationMode = "prisma"
}

model Prompt {
  id           String   @id @default(uuid())
  title        String
  desc         String
  category     String
  imageUrl     String?
  fullPrompt   String
  tags         String   // Stored as comma-separated or JSON string
  previewImage String?
  
  // Execution Breakdown Fields
  aiPercentage           Int      @default(0)
  manualSteps            String[] @default([])
  aiTools                String[] @default([])
  manualTools            String[] @default([])
  showExecutionBreakdown Boolean  @default(false)
  
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model NewsletterSubscriber {
  id        String   @id @default(uuid())
  email     String   @unique
  createdAt DateTime @default(now())
}

model ContactMessage {
  id        String   @id @default(uuid())
  name      String
  email     String
  message   String
  createdAt DateTime @default(now())
}

// User model for Authentication
model User {
  id              String           @id @default(uuid())
  name            String?
  email           String           @unique
  password        String
  image           String?
  role            String           @default("USER") // USER, WRITER, EDITOR, ADMIN
  createdAt       DateTime         @default(now())
  submissions     Submission[]
  posts           BlogPost[]
  serviceRequests ServiceRequest[]
}

model Submission {
  id          String   @id @default(uuid())
  name        String
  handle      String?
  email       String
  tool        String
  promptText  String
  link        String?
  assetPath   String?
  consent     Boolean
  status      String   @default("pending") // pending, approved, rejected
  moderatedBy String?
  moderatedAt DateTime?
  createdAt   DateTime @default(now())
  
  userId      String?
  user        User?    @relation(fields: [userId], references: [id])
  
  @@index([userId])
}

model BlogPost {
  id          String   @id @default(uuid())
  title       String
  slug        String   @unique
  content     String   // HTML Content
  excerpt     String?
  featuredImage  String?
  
  status      String     @default("DRAFT") // DRAFT, PUBLISHED, ARCHIVED
  publishedAt DateTime?
  
  // SEO Fields
  seoTitle       String?
  seoDescription String?
  canonicalUrl   String?
  focusKeyword   String?
  
  // Open Graph
  ogTitle        String?
  ogDescription  String?
  ogImage        String?

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  authorId    String
  author      User     @relation(fields: [authorId], references: [id])
  
  @@index([authorId])
}

model ServiceRequest {
  id           String   @id @default(uuid())
  userId       String
  user         User     @relation(fields: [userId], references: [id])

  serviceId    String
  service      Service  @relation(fields: [serviceId], references: [id])

  budget       String?
  deadline     String?
  requirements String   // Stored as JSON string
  
  status       String   @default("NEW") // NEW, IN_PROGRESS, COMPLETED, REJECTED
  
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  
  @@index([userId])
  @@index([serviceId])
}

model Service {
  id            String   @id @default(uuid())
  title         String
  description   String
  startingPrice Float
  isActive      Boolean  @default(true)
  requests      ServiceRequest[]
  
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}
